<?xml version="1.0"?>
<psalm
    errorLevel="2"
    resolveFromConfigFile="true"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <UndefinedMagicPropertyAssignment>
            <!-- No clue what happened, worked with previous version of pg-builder -->
            <errorLevel type="suppress">
                <file name="src/fragments/join_strategies/ExplicitJoinStrategy.php" />
                <file name="src/fragments/join_strategies/LateralSubselectStrategy.php" />
                <referencedProperty name="on" />
            </errorLevel>
        </UndefinedMagicPropertyAssignment>

        <MissingClosureReturnType>
            <errorLevel type="suppress">
                <!-- Cannot typehint mixed in PHP 7.4 -->
                <file name="src/gateways/CompositePrimaryKeyTableGateway.php"/>
                <file name="src/TableLocator.php"/>
            </errorLevel>
        </MissingClosureReturnType>
    </issueHandlers>
</psalm>
